extends layout
block content
  style.
    body {
      background-image: url('/images/ppi.jpeg');
      background-repeat: no-repeat;
    }
  div(class="col-md-3")
    table(class="table table-stripped")
      thead
        tr
          th Lampu
          th Switch
          th Ampere
      tbody
        each row in flood
          tr
            td='Lampu: ' + row.dataValues.lamp_id
            td
              label(class='switch')
                if row.dataValues.lamp_status == '1'
                  input(type='checkbox' id='floodCheck' + row.dataValues.lamp_id onclick='floodSwitch("' + row.dataValues.lamp_id + '")' checked)
                else 
                  input(type='checkbox' id='floodCheck' + row.dataValues.lamp_id onclick='floodSwitch("' + row.dataValues.lamp_id + '")')
                span(class='slider round')
            td=row.dataValues.lamp_amp + ' Amp'

  script(src="/javascripts/flood_fe.js")